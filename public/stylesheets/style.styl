/* Variables */
main-grey = #6c6c6c
orange = #f48e06

/* Mixins */
CookieFont(n)
	color orange
	font-family 'Cookie'
	font-size n

/* General Styles */
* 
	-moz-box-sizing border-box
	-webkit-box-sizing border-box
	box-sizing border-box

body
	font 14px "Lucida Grande", Helvetica, Arial, sans-serif
	background-image url(sprites/body_bg.png)

#container
	width 980px
	background-color #fff
	margin 25px auto
	padding 20px 0 0
	
h1
	font-weight normal
	margin 0 0 5px 45px
	
/* Columns */
.cols
	clearfix()
	.col
		float left
	.col1
		width 25%
	.col2
		width 50%
	.col3
		width 75%
	.col4
		width 100%

/* Header */ 
header
	text-align center
	clearfix()
	nav
		margin-left 270px
		ul
			padding 0
			margin 0
			clearfix()
			li 
				float left
				position relative
				font-size 12px
				text-transform uppercase
				color main-grey
				a
					color main-grey
					text-decoration none
				a:hover
					text-decoration underline
				ul
					display none
					position absolute
					top 100%
					z-index 10
					background-color rgba(250, 250, 250, 0.75)
					li
						display block
						width 150px
						text-align left
						margin-top 12px
						margin-bottom 3px
						padding-left 3px
					li + li
						margin-left 0
			li:hover ul
				display block
			li:hover > a
				text-decoration underline
			li + li
				margin-left 40px
				
footer
	margin-top 25px
	padding 0 90px
	color main-grey
	overflow hidden
	a
		color main-grey
	p
		float left
		margin-top 25px
	p.facebook
		float right
		CookieFont 20px
		margin-top 5px
		a
			display block
			clear both
			text-align center
		

/* Content */	
#content
	padding 0 90px
	CookieFont 25px
					
/* Home Page */
#slides
	margin-top 15px
	ul
		list-style none
		padding 0
		position relative
		height 530px
		width 800px
		margin 0 auto
		li
			position absolute
			display none
			
/* Photography Page */
#albums
	ul
		padding 0
		list-style none
		clearfix()
		li
			float left
			width 190px
			a
				display block
				text-align center
				text-decoration none
				img
					padding 5px
					border 1px solid #ccc
				span
					font-size 11px
					color main-grey
		li + li
			margin-left 12px
			
/* Album Page */
/* Photography Page */
#album
	ul
		padding 0
		list-style none
		clearfix()
		li
			float left
			width 190px
			img
				padding 5px
				border 1px solid #ccc
		li + li
			margin-left 12px
		
/* Slideshow */
.ad-slideshow-stop
		display none
.ad-slideshow-running
	.ad-slideshow-start
		display none
	.ad-slideshow-stop
		display inline
	.ad-slideshow-countdown
		display none
		
.ad-gallery .ad-forward, .ad-gallery .ad-back
	top 23px
	
.ad-gallery .ad-thumbs li a.ad-active img
	border 3px solid orange
	
/* Contact Form */
form
	margin-left 30px
	fieldset
		border 0
	ul
		list-style none
		padding-left 0
		li
			label
				width 120px
				display block
			textarea, input
				width 330px
			textarea
				height 100px
				
		li + li
			margin-top 15px
			
#error, #success
	margin-left 40px
	background-color #FCC
	border 3px solid #FF8080
	padding 0 15px
	color main-grey
	width 450px
	
#success
	background-color #cfc
	border-color #08FF08
		
