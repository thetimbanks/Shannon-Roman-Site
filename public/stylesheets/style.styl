/* General Styles */
* 
	-moz-box-sizing border-box
	-webkit-box-sizing border-box
	box-sizing border-box

body
	font 14px "Lucida Grande", Helvetica, Arial, sans-serif
	background-image url(sprites/body_bg.png)

#container
	width 980px
	background-color #fff
	margin 75px auto
	padding 25px

header
	text-align center
	clearfix()
	nav
		ul
			padding 0
			width 800px
			margin	0 auto
			clearfix()
			li 
				float left
				a
					color #6c6c6c
					text-decoration none
					font-size 16px
					text-transform uppercase
					letter-spacing	3px
			li + li
				margin-left 80px
					
/* Home Page */
#slides
	margin-top 25px
	ul
		list-style none
		padding 0
		position relative
		height 400px
		width 800px
		margin 0 auto
		li
			position absolute
			display none